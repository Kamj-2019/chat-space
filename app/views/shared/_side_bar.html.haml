.wrapper__side
  .wrapper__side__head
    %h1
      = current_user.name
    %ul
      %li
        = link_to new_group_path do
          = fa_icon 'pencil-square-o'
      %li
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
  .wrapper__side__cont
    .wrapper__side__cont__inner
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          %p.group
            = group.name
          %p.message
            = group.show_last_message
      = link_to image_tag("/assets/logo.png", width: '135', alt: 'ロゴマーク'), root_path, class: 'top__search__logo'
